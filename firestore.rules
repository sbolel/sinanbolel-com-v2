rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read and write only to their own session document
    match /sessions/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write only to their own chat documents
    match /chats/{chatId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && resource.data.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid
                    && validateMessageFrom();
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Deny access to all other documents
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

function validateMessageFrom() {
  let incomingData = request.resource.data;
  let existingData = resource.data;
  
  // Ensure new messages have the correct 'from' field
  return incomingData.messages.size() == existingData.messages.size() + 1
         && incomingData.messages[incomingData.messages.size() - 1].from == request.auth.uid;
}
